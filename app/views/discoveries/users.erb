<% @users.each do |user|%>
  <div class="col s12 m8 offset-m2 l6 offset-l3">
    <div class="card-panel grey lighten-5 z-depth-1">
      <div class="row valign-wrapper">
        <div class="col s2">
          <%= image_tag(user.avatar.url, class: "circle responsive-img ", style: 'max-height: 200px;') %>
        </div>
        <div class="col s10">
          <span class="black-text " >
            <strong><%= user.user_name %></strong>
              (<strong><%= user.words.count %></strong>)
          </span>
        </div>
      </div>
    </div>
  </div>
<% end %>
