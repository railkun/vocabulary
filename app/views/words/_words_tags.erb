<% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>


  <% if params[:tag_name] == tag.name %>
   <%= link_to tag.name, tag_words_path(tag_name: tag.name) , :class => css_class, style: 'color: #888;' %>
  <% else %>
   <%= link_to tag.name, tag_words_path(tag_name: tag.name) , :class => css_class %>
  <% end %>
<% end %>
